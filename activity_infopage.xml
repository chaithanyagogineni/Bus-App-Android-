<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff991887"
    tools:context="user1.myproject.com.test1.Infopage">

    <TextView android:text="GRIET BUSES"
        android:textSize="40sp"
        android:background="#ffffdd2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff5fff26"
            android:text="home"
            android:id="@+id/home"/>

         <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffff9f2"
        android:text="logout"
        android:id="@+id/logout" />

         <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffeaffce"
        android:text="buses"
        android:id="@+id/buses" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:text="IN"
                android:textSize="50sp"
                android:background="#ffffdd2b"
                android:layout_width="190dp"
                android:layout_height="wrap_content" />
                <TextView
                    android:text="OUT"
                    android:textSize="50sp"
                    android:background="#ffffdd2b"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content" />
         </LinearLayout>


    <ImageButton
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/imageButton1"
     android:src="@drawable/inimage" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/outimage"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"><![CDATA[
        android:orientation="horizontal"/>



        ]]></LinearLayout>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ff5fff26"
    android:text="report"
        android:id="@+id/report">

</Button>
    </LinearLayout>